# https://editorconfig.org/

root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 120


[*.rst]
indent_size = 3
max_line_length = 90

[*.puml]
indent_size = 2

[*.{yml,yaml,md}]
indent_size = 2
